@model GerenciadorJogos.Models.Jogo

@{
    ViewData["Title"] = "Editar Jogo";
}

<div class="editar-container">
    <h1 class="titulo-principal">Editar Jogo</h1>

    <div class="editar-card">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Titulo" class="control-label">Título</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Ano" class="control-label">Ano</label>
                <input asp-for="Ano" class="form-control" type="number" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Capa" class="control-label">Capa (URL)</label>
                <input asp-for="Capa" class="form-control" />
                <span asp-validation-for="Capa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Plataformas e Valor</label>
                @foreach (var plataforma in ViewBag.Plataformas)
                {
                    var jogoPlataforma = Model.JogoPlataformas?.FirstOrDefault(jp => jp.PlataformaId == plataforma.Id);
                    bool selecionada = jogoPlataforma != null;
                    decimal valor = jogoPlataforma?.Valor ?? 0;

                    <div class="form-check mb-2">
                        <input type="checkbox"
                               name="plataformaIds"
                               value="@plataforma.Id"
                               class="form-check-input"
                               @(selecionada ? "checked" : "") />
                        <label class="form-check-label">@plataforma.Nome</label>

                        <input type="number"
                               step="0.01"
                               name="valores[@plataforma.Id]"
                               value="@(valor != 0 ? valor.ToString("0.00") : "")"
                               class="form-control mt-1"
                               placeholder="Valor R$" />
                    </div>
                }
            </div>

            <div class="form-group">
                <label>Gêneros</label>
                @foreach (var genero in ViewBag.Generos)
                {
                    <div class="form-check">
                        <input type="checkbox"
                               name="generoIds"
                               value="@genero.Id"
                               class="form-check-input"
                               checked="@(ViewBag.SelectedGeneroIds.Contains(genero.Id))" />
                        <label class="form-check-label">@genero.Nome</label>
                    </div>
                }
            </div>

            <div class="form-group botoes">
                <button type="submit" class="btn-salvar">Salvar</button>
                <a asp-action="Index" class="btn-voltar">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #02101F;
            color: #fff;
            font-family: 'Segoe UI', sans-serif;
        }

        .editar-container {
            text-align: center;
            margin-top: 40px;
        }

        .titulo-principal {
            color: cyan;
            text-shadow: 0 0 10px cyan;
            font-size: 2.2rem;
            margin-bottom: 30px;
        }

        .editar-card {
            background-color: #0B1A2D;
            border: 1px solid cyan;
            border-radius: 15px;
            box-shadow: 0 0 20px cyan;
            width: 60%;
            margin: 0 auto;
            padding: 30px;
        }

        label {
            color: cyan;
            font-weight: bold;
        }

        .form-control {
            background-color: #091422;
            color: #fff;
            border: 1px solid cyan;
            border-radius: 8px;
        }

        .form-control:focus {
            outline: none;
            box-shadow: 0 0 10px cyan;
        }

        .btn-salvar {
            background-color: cyan;
            color: #000;
            border: none;
            padding: 10px 20px;
            border-radius: 10px;
            font-weight: bold;
            transition: 0.3s;
        }

        .btn-salvar:hover {
            background-color: #00bcd4;
            box-shadow: 0 0 15px cyan;
        }

        .btn-voltar {
            background-color: #444;
            color: white;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 10px;
            margin-left: 10px;
            transition: 0.3s;
        }

        .btn-voltar:hover {
            background-color: #666;
            box-shadow: 0 0 10px cyan;
        }

        .botoes {
            margin-top: 20px;
        }

        .form-check-label {
            margin-left: 5px;
        }
    </style>
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}